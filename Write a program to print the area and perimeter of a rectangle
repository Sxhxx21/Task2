//Write a program to print the area and perimeter of a rectangle
//Test Data: Width = 5.5 Height = 8.5

public class Problem3 {
    public static void main(String[] strings) {

        final double width = 5.5;
        final double height = 8.5;

        double perimeter = 2 * (height + width);

        double area = width * height;

        System.out.printf("Perimeter of Rectangle is 2*(%.1f + %.1f) = %.2f \n", height, width, perimeter);

        System.out.printf("Area of Rectangle is %.1f * %.1f = %.2f \n", width, height, area);
    }

}
